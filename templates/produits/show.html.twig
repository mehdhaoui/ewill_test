{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block content %}
    <div class="container">
        <h1>Produits</h1>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ produit.id }}</td>
                        </tr>
                        <tr>
                            <th>Reference</th>
                            <td>{{ produit.reference }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ produit.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ produit.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ produit.prix }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>


            <a href="{{ path('produits_index') }}" class="btn btn-primary button_style">retour</a>

            <a href="{{ path('produits_edit', {'id': produit.id}) }}" class="btn btn-success button_style">Editer</a>

            {{ include('produits/_delete_form.html.twig') }}
    </div>
{% endblock %}
