<form method="post" action="{{ path('produits_delete', {'id': produit.id}) }}"
      onsubmit="return confirm('êtes-vous sûr de vouloir supprimer ce produit?');" class="d-inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
    <button class="btn btn-danger button_style">Supprimer</button>
</form>
