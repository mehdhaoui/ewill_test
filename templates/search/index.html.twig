{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if produits | length == 0 %}
                <h4 class="text-center">Aucun résulat pour votre recherche.</h4>
            {% else %}
                <div class="container">
                <h3 class="mt-3">Vos résulats de recherche :</h3>
                {% for produit in produits %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('produits_show', {'id': produit.id}) }}">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ produit.nom }}</h6>

                        </a>
                    </div>
                {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
